#:kivy 1.11.1


<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.5, 0.5, 0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO REPRESA v1.0'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: "MODBUS"
                    on_release: root._modbusPopup.open()
                Button:
                    text: "Scan Time"
                    on_release: root._scanPopup.open()
        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}
    
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/represa.jpeg'
        Button:
            size_hint: (None,None)
            size: (0.65*152,0.65*105)
            background_normal: 'imgs/valve_close.png'
            background_down: 'imgs/valve_open.png'
            pos_hint: {'x':0.05,'y':0.45}
            # on_release:
            #     root._graph.open()
        Button:
            size_hint: (None,None)
            size: (0.65*152,0.65*105)
            background_normal: 'imgs/valve_close.png'
            background_down: 'imgs/valve_open.png'
            pos_hint: {'x':0.05,'y':0.32}
            # on_release:
            #     root._graph.open()
        Button:
            size_hint: (None,None)
            size: (0.65*152,0.65*105)
            background_normal: 'imgs/valve_closed.png'
            background_down: 'imgs/valve_open.png'
            pos_hint: {'x':0.05,'y':0.60}
            # on_release:
            #     root._graph.open()
        Label:
            id: lb_tanque
            size_hint: (None,None)
            size: (tanque.size[0]*0.25,tanque.size[1]*0.9)
            pos_hint: {'x':0.39,'y':0.4}
            canvas:
                Color:
                    rgb: 0,0,1
                Rectangle:
                    size: self.size
                    pos: (self.pos[0]+self.width*1.5,self.pos[1])
        Image:
            id: tanque
            source: 'imgs/tanque.png'
            size_hint: 0.25,0.25
            pos_hint: lb_tanque.pos_hint

