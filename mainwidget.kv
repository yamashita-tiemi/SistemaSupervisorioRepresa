#:kivy 1.11.1


<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.5, 0.5, 0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO REPRESA v1.0'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: "MODBUS"
                    on_release: root._modbusPopup.open()
                Button:
                    text: "Scan Time"
                    on_release: root._scanPopup.open()
        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}
    
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/represa1.png'
        Image:
            id: valve1
            size_hint: (None,None)
            size: (0.35*300,0.35*229)
            source: 'imgs/valve_closed.png'
            pos_hint: {'x':0.005,'y':0.44}
        Button:
            size_hint: (None,None)
            size: (0.4*133,0.4*134)
            pos_hint: {'x':0.1,'y':0.50}
            background_normal: 'imgs/off1.png'
            background_down: 'imgs/on1.png'
            # on_release:
            #     root._graph.open()
        Image:
            id: valve2
            size_hint: (None,None)
            size: (0.35*300,0.35*229)
            source: 'imgs/valve_closed.png'
            pos_hint: {'x':0.005,'y':0.29}
        Button:
            size_hint: (None,None)
            size: (0.4*133,0.4*134)
            pos_hint: {'x':0.1,'y':0.35}
            background_normal: 'imgs/off1.png'
            background_down: 'imgs/on1.png'
            # on_release:
            #     root._graph.open()
        Image:
            id: valve3
            size_hint: (None,None)
            size: (0.35*300,0.35*229)
            source: 'imgs/valve_closed.png'
            pos_hint: {'x':0.005,'y':0.14}
        Button:
            size_hint: (None,None)
            size: (0.4*133,0.4*134)
            pos_hint: {'x':0.1,'y':0.20}
            background_normal: 'imgs/off1.png'
            background_down: 'imgs/on1.png'
            # on_release:
            #     root._graph.open()
        Label:
            id: lb_tanque
            size_hint: (None,None)
            size: (tanque.size[0]*0.83,tanque.size[1]*0.75)
            pos_hint: {'x':0.28,'y':0.27}
            canvas:
                Color:
                    rgb: 0,191,255
                Rectangle:
                    size: self.size
                    pos: (self.pos[0]+self.width*0.1,self.pos[1]+self.height*0.02)
        Image:
            id: tanque
            source: 'imgs/tank.png'
            size_hint: 0.5,0.5
            pos_hint: lb_tanque.pos_hint
        Image:
            id: bomba
            size_hint: (None,None)
            size: (0.35*300,0.35*229)
            source: 'imgs/motor.png'
            pos_hint: {'x':0.85,'y':0.575}
        Button:
            id: bombaButton
            size_hint: (None,None)
            size: (0.4*133,0.4*134)
            background_normal: 'imgs/off1.png'
            background_down: 'imgs/on1.png'
            pos_hint: {'x':0.92,'y':0.72}
            # on_release:
            #     root._graph.open()
        Button:
            text: 'Menu'
            pos_hint: {'right':1, 'down':1}
            size_hint: (0.2,0.05)
            # on_release:
            #     root._hgraph.open()
        Button:
            text: 'Dados Historicos'
            pos_hint: {'left':1, 'down':1}
            size_hint: (0.2,0.05)
            # on_release:
            #     root._hgraph.open()

